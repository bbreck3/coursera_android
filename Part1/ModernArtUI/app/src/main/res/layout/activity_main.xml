<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.example.modernartui.MainActivity">


    <GridLayout
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:columnCount="2"
        android:rowCount="4">

        <View
            android:id="@+id/colored_bar_red"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/colorRed" />

        <View
            android:id="@+id/colored_bar_green"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@color/colorGreen" />

        <View
            android:id="@+id/colored_bar_yellow"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@color/colorYellow" />

        <View
            android:id="@+id/colored_bar_orange"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@color/colorOrange" />

        <View
            android:id="@+id/colored_bar_violet"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@color/colorViolet" />

        <View
            android:id="@+id/colored_bar_blue"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@color/colorBlue" />

        <!--<SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />-->


    </GridLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="371dp"
        android:layout_height="19dp"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridview" />
</android.support.constraint.ConstraintLayout>
